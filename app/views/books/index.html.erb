<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sub title</th>
      <th>Image</th>
      <th>Origin title</th>
      <th>Language</th>
      <th>Pulished year</th>
      <th>Pages</th>
      <th>Cover price</th>
      <th>Isbn</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.sub_title %></td>
        <td><%= book.image %></td>
        <td><%= book.origin_title %></td>
        <td><%= book.language %></td>
        <td><%= book.pulished_year %></td>
        <td><%= book.pages %></td>
        <td><%= book.cover_price %></td>
        <td><%= book.isbn %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

